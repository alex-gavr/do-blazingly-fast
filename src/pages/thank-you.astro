---
import FinanceThankYou from '@components/FinanceSurvey/FinanceThankYou.astro';
import Layout from '@layouts/Layout.astro';
import ShoppingThankYou from '@components/ShoppingSurvey/ShoppingThankYou.astro';
import { offers } from '@config/globalConfig';

const offer = parseInt(Astro.url.searchParams.get('offer_id') ?? '0');
const offerExists = offers.includes(offer as (typeof offers)[number]);
---

<Layout title='Finance Survey'>
  {offer === 0 || offer === 2025 || !offer || !offerExists ? <FinanceThankYou /> : null}
  {offer === 10864 ? <ShoppingThankYou /> : null}
</Layout>
