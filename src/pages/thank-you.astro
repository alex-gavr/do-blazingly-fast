---
import FinanceThankYou from '@components/FinanceSurvey/FinanceThankYou.astro';
import Layout from '@layouts/Layout.astro';
import ShoppingThankYou from '@src/components/ShoppingSurvey/ShoppingThankYou.astro';

const offer = parseInt(Astro.url.searchParams.get('offer_id') ?? '0');
---

<Layout title='Finance Survey'>
  {offer === 0 || offer === 2025 ? <FinanceThankYou /> : null}
  {offer === 10864 ? <ShoppingThankYou /> : null}
</Layout>
