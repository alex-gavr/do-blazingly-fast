---
import OldSweepsBoxes from '@components/RewardisOldSweep/OldSweepsBoxes.astro';
import RewardisBoxes from '@components/RewardisSweep/RewardisBoxes.astro';
import { offers } from '@config/globalConfig';
import Layout from '@layouts/Layout.astro';

const offer = parseInt(Astro.url.searchParams.get('offer_id') ?? '0');
const offerExists = offers.includes(offer as (typeof offers)[number]);
---

<Layout title='Best Survey in the world'>
  {offer === 9560 ? <RewardisBoxes /> : null}
  {offer === 9569 ? <OldSweepsBoxes /> : null}
</Layout>
