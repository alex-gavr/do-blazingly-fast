---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <script src='@utils/ErrorFallback.ts'></script>
    <script src='@fraudPrevention/areCookiesEnabled.ts'></script>
  </head>
  <body id='body'>
    <main class='flex flex-col justify-center items-center min-h-screen'>
      <slot />
    </main>
    <Reverse zone={zones.onclick_reverse_zone} client:only='preact' />
    <NonUnique
      zone={zones.ipp_not_unique}
      zonePops={zones.ipp_not_unique}
      zoneTeen={zones.ipp_not_unique_teen}
      zoneTeenPops={zones.ipp_not_unique_teen}
      client:only='preact'
    />
    <AutoExit
      zoneFirstStep={zones.onclick_autoexit}
      zoneFirstStepPops={zones.onclick_autoexit_pops}
      zoneLastStep={zones.ipp_autoexit}
      zoneLastStepPops={zones.ipp_autoexit_pops}
      zoneMiddleSteps={zones.ipp_autoexit}
      zoneMiddleStepsPops={zones.ipp_autoexit_pops}
      client:only='preact'
    />
    <InitPush zone={zones.push_zone} client:only='preact' />
  </body>
</html>

<script>
