    replaceMacrosWithEmptyString(window.location.href);
  }
</script>

<script>
  if (typeof window !== 'undefined') {
    if (!sessionStorage.getItem('surveyStartTime')) {
      sessionStorage.setItem('surveyStartTime', Date.now().toString());
    }
  }
</script>
