---
import type { TFinanceDictionary } from '@i18n/2025/en';

interface Props {
  userInput: TFinanceDictionary['CommentSection']['UserInput'];
}
const { userInput } = Astro.props;
---

<div class='mt-4 flex w-full flex-row items-start justify-start gap-2'>
  <img src=`/img/people/unnamed.webp` width='40' height='40' alt='person' class='h-10 w-10 shrink-0 rounded-md' loading='lazy' />
  <div class='flex w-full flex-col items-start justify-start gap-4'>
    <label for='nameInput' class='hidden'>{userInput.labelName}</label>
    <input
      type='text'
      name='nameInput'
      id='nameInput'
      placeholder=`${userInput.labelName}...`
      class='h-8 w-full rounded-sm pl-2'
      aria-label='Name input'
    />
    <label for='commentTextarea' class='hidden'>{userInput.labelComment}</label>
    <textarea
      name='commentTextarea'
      id='commentTextarea'
      cols='30'
      rows='5'
      class='w-full rounded-sm p-2'
      placeholder=`${userInput.labelComment}...`
      aria-label='Comment textarea'></textarea>
    <div class='flex w-full flex-row items-center justify-between'>
      <div class='flex flex-row items-center justify-center gap-2'>
        <label for='checkboxInput' class='hidden'>{userInput.labelCheckBox}</label>
        <input type='checkbox' name='checkboxInput' id='checkboxInput' aria-label='Select option' class='h-4 w-4' />
        <p class='text-[0.6rem]'>{userInput.paragraph}</p>
      </div>
      <button type='button' class='rounded bg-neutral-300 px-4 py-1 text-sm text-slate-900'>{userInput.button}</button>
    </div>
  </div>
</div>
