---
import type { IComment } from './sweepCommentsData';
interface Props {
  id: IComment['id'];
  name: IComment['name'];
  text: IComment['text'];
  likes: IComment['likes'];
  date: IComment['date'];
  avatar: IComment['avatar'];
}
const { id, name, text, likes, date, avatar } = Astro.props;
---

<div class='bg-sky-100 px-2 py-4 rounded-md w-full max-w-sm relative flex flex-row gap-2'>
  <img src={avatar} width='40' height='40' alt='person' class='h-10 w-10 shrink-0 rounded-md' loading='lazy' />
  <div class='flex flex-col justify-start items-start gap-1'>
    <h1 class='text-black text-sm font-bold tracking-wider'>{name}</h1>
    <p class='text-slate-800 text-xs tracking-wider'>{text}</p>
    <div class='flex flex-row justify-center items-center gap-2'>
      <div class='flex flex-row items-start justify-start gap-1'>
        <p class='text-xs text-indigo-600'>{likes}</p>
        <p class='text-xs text-indigo-600'>Likes</p>
      </div>
      <p class='text-xs text-indigo-600'>Reply</p>
    </div>
  </div>
  <p class='absolute top-2 right-2 text-xs text-slate-500'>{date}</p>
</div>
