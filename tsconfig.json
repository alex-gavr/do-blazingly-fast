{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@db/*": ["src/db/*"],
      "@i18n/*": ["src/i18n/*"],
      "@context/*": ["src/context/*"]
    }
  }
}
